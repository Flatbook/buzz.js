{
  "name": "@sonder/buzz.js",
  "version": "0.4.2",
  "description": "Tools for mocking graphql queries and fragments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "repository": "https://github.com/flatbook/buzz.js",
  "author": "Steve Coffey",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "check:typesafety": "tsc --noEmit",
    "check:lint": "eslint . --ext=ts,js",
    "check:test": "jest test",
    "generate:types": "./bin/generate-types",
    "generate:docs": "typedoc --options ./typedoc.json ./src",
    "prepare": "yarn build",
    "preversion": "yarn check:lint && yarn check:test",
    "version": "./bin/version",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@apollo/client": "^3.2.1",
    "@apollo/react-hooks": "^4.0.0",
    "@testing-library/react": "^11.0.4",
    "@types/node": "^14.6.3",
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "apollo": "^2.31.0",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "ts-jest": "^26.3.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typedoc-plugin-markdown": "^3.0.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "graphql": "^14.0.0",
    "graphql-tools": "^6.2.0",
    "jest": ">=24.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
